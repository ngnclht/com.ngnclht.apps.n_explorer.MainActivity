<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gradient_gray_ribbon_bg"
        android:gravity="center" >

        <RadioGroup
            android:id="@+id/asettingtheme_dialog_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/asettingtheme_dialog_theme_custom"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_filefolder_bg"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/custom_radio"
                android:padding="12dp"
                android:text="@string/asettingtheme_dialog_theme_custom"
                android:textColor="@color/Black"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/asettingtheme_dialog_theme_simple"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_filefolder_bg"
                android:button="@null"
                android:checked="false"
                android:drawableRight="@drawable/custom_radio"
                android:padding="12dp"
                android:text="@string/asettingtheme_dialog_theme_simple"
                android:textColor="@color/Black"
                android:textSize="20sp" />

            
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/asettingtheme_dialog_theme"
            android:gravity="center" >

            <Button
                android:id="@+id/asettingtheme_dialog_theme_okbutton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/Ok_button" />

            <Button
                android:id="@+id/asettingtheme_dialog_theme_cancelbutton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/Cancel_button" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>